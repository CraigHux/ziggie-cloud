# =============================================================================
# Discord Webhook Configuration for Ziggie Ecosystem
# =============================================================================
# Copy this file to .env and fill in your webhook URLs
# NEVER commit .env files to version control
# =============================================================================

# =============================================================================
# OPTION 1: Single Webhook (Simple Setup)
# =============================================================================
# Use this for development or simple deployments
# All notifications go to one channel

DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# =============================================================================
# OPTION 2: Multiple Webhooks (Recommended for Production)
# =============================================================================
# Use separate webhooks for different notification types
# Each webhook should point to a different Discord channel

# Critical alerts and errors (#ziggie-alerts)
DISCORD_WEBHOOK_ALERTS=https://discord.com/api/webhooks/YOUR_ALERTS_WEBHOOK_ID/YOUR_TOKEN

# Deployment notifications (#ziggie-deployments)
DISCORD_WEBHOOK_DEPLOY=https://discord.com/api/webhooks/YOUR_DEPLOY_WEBHOOK_ID/YOUR_TOKEN

# Asset generation updates (#ziggie-assets)
DISCORD_WEBHOOK_ASSETS=https://discord.com/api/webhooks/YOUR_ASSETS_WEBHOOK_ID/YOUR_TOKEN

# Cost and budget alerts (#ziggie-costs)
DISCORD_WEBHOOK_COSTS=https://discord.com/api/webhooks/YOUR_COSTS_WEBHOOK_ID/YOUR_TOKEN

# Backup status notifications (#ziggie-backups)
DISCORD_WEBHOOK_BACKUP=https://discord.com/api/webhooks/YOUR_BACKUP_WEBHOOK_ID/YOUR_TOKEN

# Agent status updates (#ziggie-agents)
DISCORD_WEBHOOK_AGENTS=https://discord.com/api/webhooks/YOUR_AGENTS_WEBHOOK_ID/YOUR_TOKEN

# =============================================================================
# AWS Secrets Manager Configuration (Production Recommended)
# =============================================================================
# Instead of environment variables, store webhooks in AWS Secrets Manager
# Set these to enable Secrets Manager integration

# Enable Secrets Manager (set to "true" to use Secrets Manager instead of env vars)
USE_AWS_SECRETS_MANAGER=false

# AWS Region for Secrets Manager
AWS_REGION=eu-north-1

# Secret name in AWS Secrets Manager
AWS_SECRET_NAME=ziggie/discord-webhook-url

# For multiple webhooks, use this format in Secrets Manager:
# {
#   "alerts": "https://discord.com/api/webhooks/...",
#   "deploy": "https://discord.com/api/webhooks/...",
#   "assets": "https://discord.com/api/webhooks/...",
#   "costs": "https://discord.com/api/webhooks/...",
#   "backup": "https://discord.com/api/webhooks/..."
# }

# =============================================================================
# n8n Workflow Configuration
# =============================================================================

# n8n base URL (for triggering workflows)
N8N_BASE_URL=http://localhost:5678

# n8n webhook path for Discord notifications
N8N_DISCORD_WEBHOOK_PATH=/webhook/discord-notify

# n8n API key (if authentication is enabled)
N8N_API_KEY=your_n8n_api_key_here

# =============================================================================
# Notification Settings
# =============================================================================

# Enable/disable notification types (set to "false" to disable)
DISCORD_NOTIFY_ASSETS=true
DISCORD_NOTIFY_DEPLOYMENTS=true
DISCORD_NOTIFY_ERRORS=true
DISCORD_NOTIFY_COSTS=true
DISCORD_NOTIFY_BACKUPS=true
DISCORD_NOTIFY_AGENTS=true

# Minimum severity level for error notifications
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DISCORD_MIN_ERROR_SEVERITY=WARNING

# Cost alert thresholds (percentage of budget)
DISCORD_COST_ALERT_THRESHOLD=80
DISCORD_COST_CRITICAL_THRESHOLD=100

# Rate limiting (requests per minute)
DISCORD_RATE_LIMIT=30

# =============================================================================
# Bot Appearance
# =============================================================================

# Default bot username (can be overridden per notification)
DISCORD_BOT_USERNAME=Ziggie Bot

# Default bot avatar URL (can be overridden per notification)
DISCORD_BOT_AVATAR_URL=https://example.com/ziggie-avatar.png

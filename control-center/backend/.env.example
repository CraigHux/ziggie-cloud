# Control Center Backend Configuration
# Copy this file to .env and update values as needed

# Server Configuration
HOST=127.0.0.1
PORT=54112
DEBUG=true

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///control-center.db

# Directory Paths
COMFYUI_DIR=C:\ComfyUI
MEOWPING_DIR=C:\Ziggie
AI_AGENTS_ROOT=C:\Ziggie\ai-agents

# Service-Specific Paths
COMFYUI_PYTHON_PATH=C:\ComfyUI\python_embeded\python.exe
KB_SCHEDULER_PATH=C:\Ziggie\ai-agents\knowledge-base

# API Keys Directory
KEYS_API_DIR=C:\Ziggie\Keys-api

# YouTube API Key File
YOUTUBE_API_KEY_FILE=C:\Ziggie\Keys-api\meowping-youtube-api.txt

# WebSocket Configuration
WS_UPDATE_INTERVAL=2

# Port Scanning Configuration
PORT_SCAN_START=3000
PORT_SCAN_END=9000

# Authentication Configuration
# IMPORTANT: Change JWT_SECRET to a secure random string in production!
# Generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Default Admin Credentials (for initial setup)
# IMPORTANT: Change these immediately after first login!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

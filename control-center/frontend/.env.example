# Copy this file to .env and configure for your environment

# Backend API Configuration
# The URL where the backend API server is running
# Default: http://127.0.0.1:54112/api (backend runs on port 54112)
VITE_API_URL=http://127.0.0.1:54112/api

# WebSocket Configuration
# The WebSocket URL for real-time system updates and monitoring
# Default: ws://127.0.0.1:54112/api/system/ws
VITE_WS_URL=ws://127.0.0.1:54112/api/system/ws

# Environment (development/production)
# Controls build optimizations and debugging features
# Options: development, production
VITE_ENV=development
